#!/bin/bash
#
# tinc
#
# chkconfig: - 85 15
# description: start, stop, restart tincd
#              
 
RETVAL=0
 
case "$1" in
    start)
      /usr/sbin/tincd --config=/etc/tinc/vpn --pidfile=/var/run/tincd.pid --logfile=/var/log/tincd.log
      RETVAL=$?
  ;;
    stop)
      /usr/sbin/tincd -k
      RETVAL=$?
  ;;
    restart)
      /usr/sbin/tincd -k
      /usr/sbin/tincd --config=/etc/tinc/vpn --pidfile=/var/run/tincd.pid --logfile=/var/log/tincd.log
      RETVAL=$?
  ;;
    status)
      RETVAL=$?
  ;;
    *)
      echo "Usage: god {start|stop|restart|status}"
      exit 1
  ;;
esac      
 
exit $RETVAL